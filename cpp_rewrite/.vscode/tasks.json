
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-Command",
                "if (!(Test-Path \"${workspaceFolder}/build\")) { mkdir \"${workspaceFolder}/build\" }"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            },
            "problemMatcher": []
        } ,
        {
    "label": "configure",
    "type": "shell",
    "command": "cmake",
    "args": ["-S", "${workspaceFolder}", "-B", "${workspaceFolder}/build"],
    "group": "build",
    "dependsOn": "mkdir",
    "presentation": {
        "reveal": "silent",
        "panel": "new"
    },
    "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build", "--config", "Release"],
            "group": "build",
            "dependsOn": "configure",
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}

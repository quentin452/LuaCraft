{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-Command",
                "if (!(Test-Path \"${workspaceFolder}/build\")) { mkdir \"${workspaceFolder}/build\" }; ",
                "cmake -S \"${workspaceFolder}\" -B \"${workspaceFolder}/build\" -DCMAKE_EXPORT_COMPILE_COMMANDS=ON; ",
                "cmake --build \"${workspaceFolder}/build\" --config Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}